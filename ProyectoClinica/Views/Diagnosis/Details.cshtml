@model ProyectoClinica.Models.Diagnosis

@{
    ViewData["Title"] = "Details";

}

<nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color:black !important">
    <a class="navbar-brand" href="#" style="color:aliceblue">Clinica Medica <i class="fas fa-stethoscope"></i></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

        <form class="form-inline my-2 my-lg-0" style="margin-left:800px">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="btn btn-outline-light" asp-action="" asp-controller="">Salir <span class="sr-only">(current)</span><i class="fas fa-sign-out-alt"></i></a>
                </li>

            </ul>
        </form>
    </div>
</nav>
<h2 style="margin-top:20px; text-align: center; color: aliceblue; font-family: 'Century Gothic' ">Diagnosticos del Paciente <i class="fas fa-clinic-medical"></i></h2>


<hr />

<body style="background-color:gray">
    <div class="container">
        <div class="row" style="margin-left:430px">

            <dl class="row">
                <dt class="col-sm-4" style="font-family:'Century Gothic'; font-weight:bold; font-size:20px">
                    @Html.DisplayNameFor(model => model.Symptoms)
                </dt>
                <dd class="col-sm-6" style="font-family: 'Century Gothic'; font-size: 20px">
                    @Html.DisplayFor(model => model.Symptoms)
                </dd>
                <dt class="col-sm-4" style="font-family:'Century Gothic'; font-weight:bold; font-size:20px">
                    @Html.DisplayNameFor(model => model.Exams)
                </dt>
                <dd class="col-sm-6" style="font-family: 'Century Gothic'; font-size: 20px">
                    @Html.DisplayFor(model => model.Exams)
                </dd>
                <dt class="col-sm-4" style="font-family:'Century Gothic'; font-weight:bold; font-size:20px">
                    @Html.DisplayNameFor(model => model.Prescription)
                </dt>
                <dd class="col-sm-6" style="font-family: 'Century Gothic'; font-size: 20px">
                    @Html.DisplayFor(model => model.Prescription)
                </dd>
                <dt class="col-sm-4" style="font-family:'Century Gothic'; font-weight:bold; font-size:20px">
                    @Html.DisplayNameFor(model => model.Patient)
                </dt>
                <dd class="col-sm-6" style="font-family: 'Century Gothic'; font-size: 20px">
                    @Html.DisplayFor(model => model.Patient.Cel)
                </dd>
            </dl>

            <div class="row">
                <div class="form-group col-4">
                    <a asp-action="Index" asp-controller="Diagnosis" asp-route-id="@Model.PacienteId" class="btn btn-outline-light">Regresar</a>
                </div>
                
            </div>

        </div>
        
    </div>
</body>