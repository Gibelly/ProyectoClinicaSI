<h2 style="margin-top:20px; text-align: center; color: aliceblue; font-family: 'Century Gothic' "> Eliminar Diagnostico del Paciente <i class="fas fa-clinic-medical"></i></h2>
<h3 style="text-align: center; color: aliceblue; font-family: 'Century Gothic' ">¿Esta seguro que desea eliminar?</h3>

<hr />

<body style="background-color:gray">
    <div class="container">

        <dl class="row" style="margin-left:300px">
            <dt class="col-sm-2" style="font-family:'Century Gothic'; font-weight:bold; font-size:20px">
                @Html.DisplayNameFor(model => model.Symptoms)
            </dt>
            <dd class="col-sm-10" style="font-family:'Century Gothic'; font-weight:bold; font-size:20px">
                @Html.DisplayFor(model => model.Symptoms)
            </dd>
            <dt class="col-sm-2" style="font-family:'Century Gothic'; font-weight:bold; font-size:20px">
                @Html.DisplayNameFor(model => model.Exams)
            </dt>
            <dd class="col-sm-10" style="font-family:'Century Gothic'; font-weight:bold; font-size:20px">
                @Html.DisplayFor(model => model.Exams)
            </dd>
            <dt class="col-sm-2" style="font-family:'Century Gothic'; font-weight:bold; font-size:20px">
                @Html.DisplayNameFor(model => model.Prescription)
            </dt>
            <dd class="col-sm-10" style="font-family:'Century Gothic'; font-weight:bold; font-size:20px">
                @Html.DisplayFor(model => model.Prescription)
            </dd>
            <dt class="col-sm-2" style="font-family:'Century Gothic'; font-weight:bold; font-size:20px">
                @Html.DisplayNameFor(model => model.Patient)
            </dt>
            <dd class="col-sm-10" style="font-family:'Century Gothic'; font-weight:bold; font-size:20px">
                @Html.DisplayFor(model => model.Patient.Cel)
            </dd>
        </dl>

        <form asp-action="Delete" style="margin-left:440px">
            <input type="hidden" asp-for="IdDiagnosis" />
            <input type="submit" value="Eliminar" class="btn btn-outline-light" />
            <a asp-action="Index" asp-controller="Diagnosis" asp-route-id="@Model.PacienteId" class="btn btn-outline-light">Regresar</a>
        </form>

       
    </div>
   


