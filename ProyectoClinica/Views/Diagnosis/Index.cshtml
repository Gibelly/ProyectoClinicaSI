@model IEnumerable<ProyectoClinica.Models.Diagnosis>

@{
    ViewData["Title"] = "Index";

    var id = @ViewContext.RouteData.Values["id"];

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Symptoms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exams)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            @if (item.PacienteId.ToString() == id.ToString())
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Symptoms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Exams)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.IdPaciente)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdDiagnosis">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdDiagnosis">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdDiagnosis">Delete</a>
                </td>
            }
            

        </tr>
}
    </tbody>
</table>
