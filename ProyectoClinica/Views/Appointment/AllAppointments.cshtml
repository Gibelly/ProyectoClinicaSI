@model IEnumerable<ProyectoClinica.Models.Appointment>

@{
    ViewData["Title"] = "Index";
}



<nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color: transparent !important">
    <a class="navbar-brand" href="#" style="color:aliceblue">Clinica Medica</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

        <form class="form-inline my-2 my-lg-0" style="margin-left:720px">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="btn btn-outline-light" asp-action="MenuDoctor" asp-controller="Diagnosis">Volver al Menu <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="btn btn-outline-light" asp-action="Login" asp-controller="Logins">Cerrar Sesión <span class="sr-only">(current)</span></a>
                </li>

            </ul>
        </form>
    </div>
</nav>
<hr />
<h1>Index</h1>
<body style="background-color:dimgrey">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DateAppo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateAppo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patient.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patient.LastName)
                    </td>

                </tr>
            }
        </tbody>
    </table>
    
</body>
