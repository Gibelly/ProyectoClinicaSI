@model ProyectoClinica.Models.Login


@{
    ViewData["Title"] = "Create";
}
<nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color:black !important">
    <a class="navbar-brand" href="#" style="color:aliceblue">Clinica Medica <i class="fas fa-stethoscope"></i></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
</button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

        <form class="form-inline my-2 my-lg-0" style="margin-left:800px">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="btn btn-outline-light" asp-action="" asp-controller="">Salir <span class="sr-only">(current)</span><i class="fas fa-sign-out-alt"></i></a>
                </li>

            </ul>
        </form>
    </div>
</nav>
<h2 style="margin-top:20px; text-align: center; color: aliceblue; font-family: 'Century Gothic' ">Añadir Nuevo Usuario</h2>
<hr />

<body style="background-color:gray">
    <div class="container">
        <div class="row">
           
                    <form asp-action="Create">
                        <div class="row">
                            
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group col-4">
                                        <label asp-for="Name" class="control-label" style="font-family:'Century Gothic'; font-weight:bold"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-4">
                                        <label asp-for="Lastname" class="control-label" style="font-family:'Century Gothic'; font-weight:bold"></label>
                                        <input asp-for="Lastname" class="form-control" />
                                        <span asp-validation-for="Lastname" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-4">
                                        <label asp-for="User" class="control-label" style="font-family:'Century Gothic'; font-weight:bold"></label>
                                        <input asp-for="User" class="form-control" />
                                        <span asp-validation-for="User" class="text-danger"></span>
                                    </div>
                                                               
                        </div>
                        <div class="row">
                            <div class="form-group col-6">
                                <label asp-for="UserTypeId" class="control-label" style="font-family:'Century Gothic'; font-weight:bold"></label>
                                <select asp-for="UserTypeId" class="form-control" asp-items="ViewBag.UserTypeId"></select>
                            </div>

                            <div class="form-group col-6">
                                <label asp-for="Password" class="control-label" style="font-family:'Century Gothic'; font-weight:bold"></label>
                                <input asp-for="Password" class="form-control" type="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            
                        </div>
                        <br />
                        <div class="row">
                            <div class="form-group col-3">
                                <input class="btn btn-outline-light" type="submit" value="Guardar"/>
                            </div>
                            <div>
                                <div class="form-group col-3" >
                                    <a class="btn btn-outline-light" asp-action="Index">Listar</a>
                                </div>
                                </div>
                            </div>

                        
                    </form>
        

        </div>
    </div>
</body>




