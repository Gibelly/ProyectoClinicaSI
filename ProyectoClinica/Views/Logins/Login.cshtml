@model ProyectoClinica.Models.Login

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center" style="color:aliceblue">Iniciar Sesión</h1>

<h4 class="text-center" style="color:aliceblue">Login</h4>
<hr />

<body >
     <div class="container">

        <div class="row">

             <div class="col-lg-5">
             </div>

             <div class="col-lg-7">
                 <div class="row">
                      <form asp-action="Login" class="text-center" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
                        <div class="form-group">
                          <label asp-for="User" class="control-label text-center" style="font-family:'Century Gothic'; font-weight:bold" ></label>
                          <input asp-for="User" class="form-control" />
                          <span asp-validation-for="User" class="text-danger"></span>
                        </div>
          
                        <div class="form-group">
                          <label asp-for="Password" class="control-label text-center" style="font-family:'Century Gothic'; font-weight:bold"></label>
                          <input asp-for="Password" class="form-control" type="password" />
                          <span asp-validation-for="Password" class="text-danger"></span>
                         </div>

                        <div class="form-group">
                          <input type="submit" value="Ingresar" class="btn btn-outline-dark"  />
                         </div>

                       </form>

                 </div>
             </div>
                                
          
        </div>
       
    </div>
</body>

   




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

