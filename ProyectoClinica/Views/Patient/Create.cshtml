@model ProyectoClinica.Models.Patient

@{
    ViewData["Title"] = "Create";
}
<nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color:black !important">
    <a class="navbar-brand" href="#" style="color:aliceblue">Clinica Medica <i class="fas fa-stethoscope"></i></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

        <form class="form-inline my-2 my-lg-0" style="margin-left:800px">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="btn btn-outline-light" asp-action="" asp-controller="">Salir <span class="sr-only">(current)</span><i class="fas fa-sign-out-alt"></i></a>
                </li>

            </ul>
        </form>
    </div>
</nav>

<h2 style="margin-top:20px; text-align: center; color: aliceblue; font-family: 'Century Gothic' ">Agregar Paciente <i class="fas fa-clinic-medical"></i></h2>

<hr />
<style>
    body {
        background-image: url('img/fondo.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 100% 100%;
    }
</style>

<body style="background-color:gray">
    <div class="container">
        <div class="row" style="margin-left:325px">
            
            <form asp-action="Create" >
                
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">

                        <div class="form-group col-6">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-4">
                            <label asp-for="Age" class="control-label"></label>
                            <input asp-for="Age" class="form-control" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                        <div class="form-group col-8">
                            <label asp-for="Gender" class="control-label"></label>
                            <input asp-for="Gender" class="form-control" />
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-8">
                            <label asp-for="Direction" class="control-label"></label>
                            <input asp-for="Direction" class="form-control" />
                            <span asp-validation-for="Direction" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="Cel" class="control-label"></label>
                            <input asp-for="Cel" class="form-control" />
                            <span asp-validation-for="Cel" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="row">
                        <div class="form-group col-4">
                            <input type="submit" value="Create" class="btn btn-outline-light" />
                        </div>
                        <div>
                            <div class="form-group col-4">
                                <a asp-action="Index" class="btn btn-outline-light">Regresar</a>
                            </div>
                        </div>
                        </div>
                    

                
            </form>
           
        </div>

        
    </div>
</body>

        

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
